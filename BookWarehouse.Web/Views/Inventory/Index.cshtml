@model IEnumerable<BookWarehouse.Web.Models.InventoryItemModel>

@{
    ViewBag.Title = "Available Inventory";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Title Name", "Index", "Inventory", new {sortOrder = ViewBag.NameSortParm}, null)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Warehouse.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quality)
        </th>
        <th>
            @Html.ActionLink("Price", "Index", "Inventory", new {sortOrder = ViewBag.PriceSortParm }, null)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Warehouse.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quality)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InventoryItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.InventoryItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InventoryItemId })
        </td>
    </tr>
}

</table>
